{
  "assistant": {
    "name": "DALI",
    "language": "en-in",
    "voice_rate": 160,
    "listen_timeout": 30,
    "sleep_timeout": 300,
    "wake_word_path": "wakeup_word/hello-dali_en_windows_v3_0_0.ppn"
  },
  "offline": {
    "vosk_models": {
      "en-in": "models/vosk-model-en-in-0.5",
      "hi-in": "models/vosk-model-hi-0.22"
    },
    "rasa_model": "models/rasa/models/20251117-010047-libretto-carriage.tar.gz"
  },
  "online": {
    "provider": "sarvam",
    "timeout": 30,
    "sarvam_model": "sarvam-m"
  },
  "voices": {
    "en-in": "Zira",     
    "hi-in": "Microsoft Hemant"
  },
  "db": {
    "host": "${MYSQL_HOST}",
    "user": "${MYSQL_USER}",
    "password": "${MYSQL_PASSWORD}",
    "db": "${MYSQL_DB}"
  },
  "keys": {
    "picovoice": "${PICOVOICE_ACCESS_KEY}",
    "sarvam_api_key": "${SARVAM_API_KEY}",
    "openweather_api_key": "${OPENWEATHER_API_KEY}",
    "news_api_key": "${NEWS_API_KEY}"
  }
}
